{
  "app": {
    "portNumber": "env:PORT",
    "routes": [{
      "route": "/api/v1",
      "type": "module",
      "module": "server/v1.js"
    }, {
      "route": "/api/v2",
      "type": "module",
      "module": "server/v2.js"
    }]
  },
  "authentication": {
    "strategy": "password",
    "maintenance": "token"
  },
  "secrets": {
    "authTokenSecret": "env:TOKEN_SECRET"
  },
  "cors": {
    "origin": "*",
    "headers": "X-Requested-With, Content-Type, Authorization",
    "methods": "GET,POST,PUT,DELETE,OPTIONS",
    "credentials": true
  },
  "databases": [{
    "host": "ds061199.mongolab.com",
    "port": "61199",
    "db": "ngcourse",
    "user": "ngcourse",
    "pass": "env:DATABASE_PASSWORD",
    "schemas": "./server/schemas.js",
    "handle": "_"
  }]
}
